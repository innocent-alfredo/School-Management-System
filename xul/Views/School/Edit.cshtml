@model Xul.Domain.Entities.School

@{
    ViewBag.Title = "Edit";
}

 

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="row">
    <div class="col-md-12">
        <!-- Advanced Tables -->
        <div class="panel panel-info">
            <div class="panel-heading">
                School Registration  
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id)

                    <div class="col-md-3">
                        @Html.LabelFor(model => model.SchoolName)

                        @Html.EditorFor(model => model.SchoolName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SchoolName, "", new { @class = "text-danger" })

                    </div>

                    <div class="col-md-3">
                        @Html.LabelFor(model => model.RegNo)

                        @Html.EditorFor(model => model.RegNo, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.RegNo, "", new { @class = "text-danger" })
                        


                    </div><br/>
                    <div class="col-md-3">

                        <input type="submit" value="Save Changes" class="btn btn-default" />
                        <a href="@Url.Action("Index")" class="btn btn-info">Go Back</a>
                    </div>





                </div>
            </div>
        </div>
    </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
