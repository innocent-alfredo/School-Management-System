@model IEnumerable<Xul.Domain.Entities.Class>

@{
    ViewBag.Title = "Index";
}

<div class="row">
<div class="col-md-12">
    <!-- Advanced Tables -->
    <div class="panel panel-info">
        <div class="panel-heading">
            School List(s)  <i class="badge pull-right">@Model.Count()</i>  
        </div>
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover table-bordered">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.School.SchoolName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ClassName)
                        </th>
                        <th>Action</th>
                    </tr>

                    @foreach (var item in Model) {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.School.SchoolName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ClassName)
                            </td>
                            <td class="text-nowrap">
                                <a href="@Url.Action("Edit", new {id = item.Id})" class="btn btn-default  btn-sm" title="Click to Edit">Edit</a>
                                <a href="@Url.Action("Details", new {id = item.Id})" class="btn btn-default  btn-sm" title="Click to View">Detail</a>
                                <a href="@Url.Action("Delete", new {id = item.Id})" class="btn btn-default  btn-sm" title="Click to Delete" style="color: red">Delete</a>
                                <a href="@Url.Action("Create","Student", new {id = item.Id})" class="btn btn-default  btn-sm" title="Allocate Classes" style="color: green">Allocate Student</a>

                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>
</div>
