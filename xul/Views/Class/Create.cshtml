@using System.Web.UI.WebControls
@model xul.Models.ViewModel.ClassViewModel

@{
    ViewBag.Title = "Create";
}


<script src="~/Scripts/jquery-ui.unobtrusive-3.0.0.min.js"></script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-md-12">
            <!-- Advanced Tables -->
            <div class="panel panel-info">
                <div class="panel-heading" style="color: peru">
                    Class Registration
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="col-md-3">
                            @Html.LabelFor(model => model.ClassName)


                            @Html.EditorFor(model => model.ClassName, new { htmlAttributes = new { @class = "form-control", @required = "", @PlaceHolder = "Enter Class e.g FORM ONE" } })
                            @Html.ValidationMessageFor(model => model.ClassName, "", new { @class = "text-danger" })

                        </div>

                        <div class="col-md-3">
                            @Html.LabelFor(model => model.SchoolId)

                            @Html.DropDownList("SchoolId", null, htmlAttributes: new { @class = "form-control", @readonly = "readonly" })
                            @Html.ValidationMessageFor(model => model.SchoolId, "", new { @class = "text-danger" })


                        </div><br />
                        <div class="col-md-3">

                            <input type="submit" value="Submit" class="btn btn-default" />
                            <a href="@Url.Action("Index")" class="btn btn-info">Go Back</a>
                        </div>





                    </div>
                </div>
            </div>
        </div>
    </div>
}

